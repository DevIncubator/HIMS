@model IEnumerable<HIMS.WebMVC.Models.UserTaskViewModel>
@{ int number = 1;}
<table class="table table-responsive table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
        @if (true)//User.IsInRole("admin")
        {
            <th></th>
        }

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(number++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Track", "Edit", new { /* id=item.PrimaryKey */}, new { @class = "btn btn-primary btn-sm" })
            </td>
            @if (true)//User.IsInRole("admin")
            {
                <td style="display:flex; flex-direction:column;">
                    <button class="btn-sm btn-danger setTaskAsFail"  data-task-id="@item.taskId">Fail</button>
                    <button class="btn-sm btn-success setTaskAsSuccess"  data-task-id="@item.taskId">Success</button>
                </td>
            }
        </tr>
    }

</table>
