@model HIMS.WebMVC.Models.TaskTracksListViewModel

@{
    ViewBag.Title = "Task Tracks Manage Grid";
}

<h2>This is your Task Tracks Manage Grid</h2>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                #
            </th>
            <th>
                Task
            </th>
            <th>
                Note
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @{
        int viewIndex = 0;
    }
        @foreach (var item in Model.TaskTracks)
        {
            viewIndex++;
            <tr>
                <th scope="row">
                    @viewIndex
                </th>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Task", new { id = item.TaskId }, null)
                </td>
                <td>
                    @Html.ActionLink(item.TrackNote, "Details", new { id = item.TaskTrackId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrackDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TaskTrackId }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.TaskTrackId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

</table>
